{{#mixin "organisms/app" this partial-name="organisms/app/game" controller-name="./partials/organisms/app/Game" }}
  {{#content "content-after"}}
    {{#mixin "molecules/sidebar" class="app__sidebar" target="[data-partial='organisms/app/game']"}}
      {{#content "content"}}
          {{{mixin "molecules/interface/map" target=target}}}
          {{{mixin "molecules/interface/add-unit" target=target tab-container-class="tab-container--sidebar"}}}
          {{{mixin "molecules/interface/unit" visible=false target=target tab-container-class="tab-container--sidebar"}}}
      {{/content}}
    {{/mixin}}
 {{{mixin "organisms/dialog/action-view" target="[data-partial='organisms/app/game']" class="dialog-position--right dialog-position--bottom"}}}
 {{{mixin "organisms/dialog/info-view" target="[data-partial='organisms/app/game']" class="dialog-position--right dialog-position--vertical-top"}}}

 {{!-- {{{mixin "organisms/dialog/detail-info" target="[data-partial='organisms/app/game']" class="dialog-position--horizontal-center dialog-position--vertical-center" is-static=true}}} --}}
{{/content}}
{{/mixin}}
