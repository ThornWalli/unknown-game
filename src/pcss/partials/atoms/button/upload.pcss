.partial[data-partial="atoms/button/file"] {
  position: relative;
  overflow: hidden;

  input {
    opacity: 0;
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    transform: translate(-50%, -50%);
    z-index: 1;
  }

  span {
    display: block;
    position: relative;
    z-index: 2;
    background: color_black;
    width: 100%;
    text-align: center;
    pointer-events: none;
  }
}
