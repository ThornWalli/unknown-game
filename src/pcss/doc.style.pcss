/* Logo for Menu */

[data-module="gp-boilerplate-documentation/modules/overview/menu"] {
  .menu__content__logo {
    display: block;
    padding-left: calc(10vw / 375vw * 100vw);
    padding-right: @padding-left;
    padding-top: @padding-left;

    @media (--screen-xs) {
      padding-left: 10px;
      padding-right: @padding-left;
      padding-top: @padding-left;
    }
  }

  .svg_symbol_default_logo {
    * {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      min-height: none;
      max-width: 100%;
      max-height: 100%;
    }
  }
}

[data-module="gp-boilerplate-documentation/modules/detail/preview"] {
  [data-hook="previewRow"] > * {
    overflow: hidden;
    -webkit-font-smoothing: antialiased;
    text-rendering: optimizeLegibility;
    font-family: "OpenSans", sans-serif;
  }
}
