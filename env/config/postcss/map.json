{
  "name": "postcss",
  "task": "gp-boilerplate-environment/lib/tasks/postcss",
  "config": {
    "subtasks": [{
      "name": "default",
      "sourcemap": true,
      "config": "<%= root %>/env/config/postcss/config",
      "files": {
        "src": ["./src/pcss/style.pcss", "./src/pcss/critical.pcss"],
        "dest": "<%= destination %>/css"
      },
      "development": {
        "watch" : {
          "src": ["**/style.css"]
        }
      }
    }, {
      "name": "docs",
      "sourcemap": true,
      "config": "<%= root %>/env/config/postcss/config",
      "files": {
        "src": ["./src/pcss/doc.style.pcss", "./src/pcss/doc.critical.pcss"],
        "dest": "<%= destination %>/css"
      },
      "development": {
        "watch" : {
          "src": ["**/doc.style.css"]
        }
      }
    }],
    "watch": [{
      "src": ["src/pcss/**/*.pcss", "node_modules/gp-boilerplate-documentation/**/*.pcss"]
    }]
  }
}
