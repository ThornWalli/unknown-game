{
  "name": "webpack",
  "task": "gp-boilerplate-environment/lib/tasks/webpack",
  "config": {
    "subtasks": [{
      "name": "app",
      "hotReplacement": true,
      "entry": {
        "app": "./src/js/main"
      },
      "config": "<%= root %>/env/config/webpack/config",
      "files": {
        "src": ["./src/js/main.js"],
        "dest": "<%= destination %>/js/[name].js",
        "publicPath": "js/",
        "library": ["[name]"],
        "chunkFilename": "app.[chunkhash].js"
      }
    }, {
      "name": "embed",
      "entry": {
        "embed": "./src/js/embed"
      },
      "config": "<%= root %>/env/config/webpack/config",
      "files": {
        "src": ["./src/js/embed"],
        "dest": "<%= destination %>/js/[name].js",
        "library": ["[name]"]
      }
    }]
  }
}
